<div class="container">
  <h2 class="mb-3">
    {{nome}}
  </h2>
  <div class="nav nav-tabs d-flex justify-content-between">
    <li class="nav-item">
      <a href="/{{nome}}" class="nav-link">
        Perfil
      </a>
    </li>
    <li class="nav-item">
      <a href="/{{nome}}/publicacoes" class="nav-link active">
        Publicações
      </a>
    </li>
    <li class="nav-item">
      <a href="/{{nome}}/comentarios" class="nav-link">
        Comentarios
      </a>
    </li>
  </div>
  {{#each posts}}
    <div class="card mb-3">
      <div class="card-header d-flex justify-content-between">
        <div class="user-info">
          <a href="/{{nome}}">{{nome}}</a>
          <small class="text-muted"> - {{data}}</small>
        </div>
        <div class="likes text-muted">
          {{curtidas}} likes
        </div>
      </div>
      <div class="card-body">
        <div class="card-title">
          <h5>
            {{titulo}}
          </h5>
        </div>
        <hr>
        <div class="card-text" style="white-space:nowrap; overflow: hidden; text-overflow: ellipsis; display:-webkit-box; line-height:16px; max-height: 32px; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
          {{{conteudo}}}
        </div>
        <a href="/post/{{id}}">Leia mais</a>
      </div>
    </div>
  {{/each}}
</div>